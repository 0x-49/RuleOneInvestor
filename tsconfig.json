{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@server/*": ["./src/server/*"],
      "@shared/*": ["./src/shared/*"],
      "@client/*": ["./src/client/src/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*", "../client/src", "./src/server", "./src/shared"],
  "exclude": ["dist"]
}
