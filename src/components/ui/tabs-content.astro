---
export interface Props {
  class?: string;
  value: string;
  [key: string]: any;
}

const { 
  class: className = '',
  value,
  ...rest 
} = Astro.props;

const baseClasses = 'mt-2';
const classes = [baseClasses, className].filter(Boolean).join(' ');
---

<div 
  class={classes}
  role="tabpanel"
  id={`content-${value}`}
  {...rest}
>
  <slot />
</div>
