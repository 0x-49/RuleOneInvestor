---
export interface Props {
  class?: string;
  [key: string]: any;
}

const { class: className = '', ...rest } = Astro.props;

const baseClasses = 'flex flex-col space-y-1.5 p-6';
const classes = [baseClasses, className].filter(Boolean).join(' ');
---

<div class={classes} {...rest}>
  <slot />
</div>
