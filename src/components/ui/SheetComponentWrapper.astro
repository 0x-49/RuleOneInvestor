---
// Import the React SheetWrapper component


export interface Props {
  triggerButton: any;
  title?: string;
  description?: string;
  contentClass?: string;
  side?: 'top' | 'right' | 'bottom' | 'left';
}

const { triggerButton, title, description, contentClass, side = 'right' } = Astro.props;
---

<!-- Use client:only to ensure the entire structure is hydrated as a single React tree -->
<div class={contentClass}>
  <slot />
</div>
