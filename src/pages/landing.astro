---
import Layout from '../layouts/MainLayout.astro';
import { TrendingUp, Shield, BarChart3, Target, Mail, Lock, User } from 'lucide-react';
import '../styles/global.css';

// Instead of React useState, we'll use form actions in Astro
const errors = Astro.url.searchParams.get('errors');
---

<Layout title="Rule One Investor - Intelligent Stock Analysis">
  <main class="bg-gradient-to-b from-slate-50 to-slate-100 min-h-screen">
    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto pt-20 pb-16 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-gray-900">
          Invest With <span class="text-primary">Confidence</span>
        </h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
          Rule One Investor helps you find wonderful companies at attractive prices,
          following Warren Buffett's principles.
        </p>
        <div class="mt-8 flex justify-center gap-4">
          <a href="#features" class="btn btn-primary">
            Learn More
          </a>
          <a href="#get-started" class="btn btn-outline">
            Get Started
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Why Rule One Investing?</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Feature 1 -->
          <div class="bg-slate-50 p-6 rounded-lg shadow-sm border border-slate-200">
            <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
              <TrendingUp class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-xl font-semibold mb-3">Big Four Growth Metrics</h3>
            <p class="text-slate-600">
              Analyze long-term growth trends in sales, earnings, equity, and free cash flow to identify consistently growing companies.
            </p>
          </div>
          
          <!-- Feature 2 -->
          <div class="bg-slate-50 p-6 rounded-lg shadow-sm border border-slate-200">
            <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
              <Shield class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-xl font-semibold mb-3">Moat Analysis</h3>
            <p class="text-slate-600">
              Evaluate competitive advantages that protect a company's profits and market share from competitors.
            </p>
          </div>
          
          <!-- Feature 3 -->
          <div class="bg-slate-50 p-6 rounded-lg shadow-sm border border-slate-200">
            <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
              <BarChart3 class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-xl font-semibold mb-3">ROIC & Financial Health</h3>
            <p class="text-slate-600">
              Assess management effectiveness with Return on Invested Capital metrics and analyze debt levels and cash flow.
            </p>
          </div>
          
          <!-- Feature 4 -->
          <div class="bg-slate-50 p-6 rounded-lg shadow-sm border border-slate-200">
            <div class="h-12 w-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
              <Target class="h-6 w-6 text-primary" />
            </div>
            <h3 class="text-xl font-semibold mb-3">Valuation Tools</h3>
            <p class="text-slate-600">
              Calculate the sticker price and margin of safety price to determine when a stock is trading at an attractive discount.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Auth Section -->
    <section id="get-started" class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Get Started Today</h2>
        
        <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-sm border border-slate-200">
          <div class="tabs w-full">
            <div class="tabs-list flex border-b mb-6" role="tablist">
              <button id="tab-signin" class="tab-trigger px-4 py-2 font-medium border-b-2 border-primary text-primary" role="tab" aria-selected="true">
                Sign In
              </button>
              <button id="tab-signup" class="tab-trigger px-4 py-2 font-medium border-b-2 border-transparent text-slate-500" role="tab" aria-selected="false">
                Sign Up
              </button>
            </div>
            
            <div class="tabs-content">
              <!-- Sign In Tab -->
              <div id="content-signin" class="tab-content" role="tabpanel">
                <form action="/api/login" method="post" class="space-y-4">
                  <div class="space-y-2">
                    <label for="signin-email" class="block text-sm font-medium text-slate-700">Email</label>
                    <div class="relative">
                      <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                        <Mail class="h-5 w-5" />
                      </span>
                      <input 
                        id="signin-email" 
                        name="email" 
                        type="email" 
                        required 
                        class="w-full py-2 pl-10 pr-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="your@email.com" 
                      />
                    </div>
                  </div>
                  
                  <div class="space-y-2">
                    <label for="signin-password" class="block text-sm font-medium text-slate-700">Password</label>
                    <div class="relative">
                      <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                        <Lock class="h-5 w-5" />
                      </span>
                      <input 
                        id="signin-password" 
                        name="password" 
                        type="password" 
                        required 
                        class="w-full py-2 pl-10 pr-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="••••••••" 
                      />
                    </div>
                  </div>
                  
                  <button type="submit" class="w-full py-2 px-4 bg-primary text-white font-medium rounded-md hover:bg-primary/90 transition-colors">
                    Sign In
                  </button>
                </form>
                
                <div class="mt-4">
                  <div class="relative my-4">
                    <div class="absolute inset-0 flex items-center">
                      <span class="w-full border-t"></span>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                      <span class="px-2 bg-white text-slate-500">Or continue with</span>
                    </div>
                  </div>
                  
                  <a href="/api/login/google" class="w-full flex items-center justify-center gap-2 py-2 px-4 border border-slate-300 rounded-md hover:bg-slate-50 transition-colors">
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                      <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                      <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                      <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                      <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    Sign in with Google
                  </a>
                </div>
              </div>
              
              <!-- Sign Up Tab -->
              <div id="content-signup" class="tab-content hidden" role="tabpanel">
                <form action="/api/register" method="post" class="space-y-4">
                  <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-2">
                      <label for="signup-firstname" class="block text-sm font-medium text-slate-700">First Name</label>
                      <input 
                        id="signup-firstname" 
                        name="firstName" 
                        type="text" 
                        required 
                        class="w-full py-2 px-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="John" 
                      />
                    </div>
                    
                    <div class="space-y-2">
                      <label for="signup-lastname" class="block text-sm font-medium text-slate-700">Last Name</label>
                      <input 
                        id="signup-lastname" 
                        name="lastName" 
                        type="text" 
                        required 
                        class="w-full py-2 px-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="Doe" 
                      />
                    </div>
                  </div>
                  
                  <div class="space-y-2">
                    <label for="signup-email" class="block text-sm font-medium text-slate-700">Email</label>
                    <div class="relative">
                      <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                        <Mail class="h-5 w-5" />
                      </span>
                      <input 
                        id="signup-email" 
                        name="email" 
                        type="email" 
                        required 
                        class="w-full py-2 pl-10 pr-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="your@email.com" 
                      />
                    </div>
                  </div>
                  
                  <div class="space-y-2">
                    <label for="signup-password" class="block text-sm font-medium text-slate-700">Password</label>
                    <div class="relative">
                      <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                        <Lock class="h-5 w-5" />
                      </span>
                      <input 
                        id="signup-password" 
                        name="password" 
                        type="password" 
                        required 
                        class="w-full py-2 pl-10 pr-3 border rounded-md focus:ring-2 focus:ring-primary focus:border-primary" 
                        placeholder="••••••••" 
                      />
                    </div>
                  </div>
                  
                  <button type="submit" class="w-full py-2 px-4 bg-primary text-white font-medium rounded-md hover:bg-primary/90 transition-colors">
                    Create Account
                  </button>
                </form>
                
                <div class="mt-4">
                  <div class="relative my-4">
                    <div class="absolute inset-0 flex items-center">
                      <span class="w-full border-t"></span>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                      <span class="px-2 bg-white text-slate-500">Or continue with</span>
                    </div>
                  </div>
                  
                  <a href="/api/login/google" class="w-full flex items-center justify-center gap-2 py-2 px-4 border border-slate-300 rounded-md hover:bg-slate-50 transition-colors">
                    <svg class="h-5 w-5" viewBox="0 0 24 24">
                      <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                      <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                      <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                      <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                    </svg>
                    Sign up with Google
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Client-side JavaScript for tab switching
  document.addEventListener('DOMContentLoaded', () => {
    const tabTriggers = document.querySelectorAll('.tab-trigger');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabTriggers.forEach(trigger => {
      trigger.addEventListener('click', () => {
        // Update tab triggers
        tabTriggers.forEach(t => {
          t.classList.remove('border-primary', 'text-primary');
          t.classList.add('border-transparent', 'text-slate-500');
          t.setAttribute('aria-selected', 'false');
        });
        
        trigger.classList.remove('border-transparent', 'text-slate-500');
        trigger.classList.add('border-primary', 'text-primary');
        trigger.setAttribute('aria-selected', 'true');
        
        // Show correct content
        const targetId = trigger.id.replace('tab-', 'content-');
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(targetId)?.classList.remove('hidden');
      });
    });
  });
</script>

<style>
  /* Additional styles for components */
  .btn {
    @apply py-2 px-6 rounded-md font-medium transition-colors;
  }
  .btn-primary {
    @apply bg-primary text-white hover:bg-primary/90;
  }
  .btn-outline {
    @apply border border-primary text-primary hover:bg-primary/10;
  }
</style>
